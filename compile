#!/bin/bash

echo "-------------------------------------------------------------------------------"
echo "  Compile Ice Cream Machine..."
echo "-------------------------------------------------------------------------------"

cd common-crosscompiler
fpc -XX -O3 icecreammachine-8kb.pas
fpc -XX -O3 icecreammachine-16kb.pas
rm *.o
cd ..

echo "-------------------------------------------------------------------------------"
echo "  HX1K"
echo "-------------------------------------------------------------------------------"

cd hx1k
./compile
cd ..

echo "-------------------------------------------------------------------------------"
echo "  Nandland Go"
echo "-------------------------------------------------------------------------------"

cd nandland
./compile
cd ..

echo "-------------------------------------------------------------------------------"
echo "  HX8K"
echo "-------------------------------------------------------------------------------"

cd hx8k
./compile
cd ..

echo "-------------------------------------------------------------------------------"
echo "  HX8K 32 bit"
echo "-------------------------------------------------------------------------------"

cd hx8k-32bit
./compile
cd ..

echo "-------------------------------------------------------------------------------"
echo "  TinyFPGA-BX"
echo "-------------------------------------------------------------------------------"

cd tinyfpga-bx
./compile
cd ..

echo "-------------------------------------------------------------------------------"
echo "  Skeletal structure"
echo "-------------------------------------------------------------------------------"

cd skeletalstructure
./compile
cd ..

echo "-------------------------------------------------------------------------------"
echo "  Mystorm"
echo "-------------------------------------------------------------------------------"

cd mystorm
./compile
cd ..

echo "-------------------------------------------------------------------------------"
echo "  Blackice 2"
echo "-------------------------------------------------------------------------------"

cd blackice2
./compile
cd ..

echo "-------------------------------------------------------------------------------"
echo "  Icebreaker"
echo "-------------------------------------------------------------------------------"

cd icebreaker
./compile
./compile-darkness
cd ..

echo "-------------------------------------------------------------------------------"
echo "  MCH2022"
echo "-------------------------------------------------------------------------------"

cd mch2022
./compile
cd ..

echo "-------------------------------------------------------------------------------"
echo "  Fomu"
echo "-------------------------------------------------------------------------------"

cd fomu
./compile
cd ..

cd fomu-ledcomm
./compile
cd ..

echo "-------------------------------------------------------------------------------"
echo "  ULX3S"
echo "-------------------------------------------------------------------------------"

cd ulx3s
./compile
cd ..

cd ulx3s-usb-experimental
./compile
cd ..

echo "-------------------------------------------------------------------------------"
echo "  Verilator 16 bit"
echo "-------------------------------------------------------------------------------"

cd verilator-16bit
./compile
cd ..

echo "-------------------------------------------------------------------------------"
echo "  Verilator 16 bit quickstore"
echo "-------------------------------------------------------------------------------"

cd verilator-16bit-quickstore
./compile
cd ..

echo "-------------------------------------------------------------------------------"
echo "  Verilator 16 bit dualport"
echo "-------------------------------------------------------------------------------"

cd verilator-16bit-dualport
./compile
cd ..

echo "-------------------------------------------------------------------------------"
echo "  Verilator 32 bit"
echo "-------------------------------------------------------------------------------"

cd verilator-32bit
./compile
cd ..

echo "-------------------------------------------------------------------------------"
echo "  Verilator 32 bit quickstore"
echo "-------------------------------------------------------------------------------"

cd verilator-32bit-quickstore
./compile
cd ..

echo "-------------------------------------------------------------------------------"
echo "  Verilator 64 bit"
echo "-------------------------------------------------------------------------------"

cd verilator-64bit
./compile
cd ..

echo "-------------------------------------------------------------------------------"
echo "  Testsuite"
echo "-------------------------------------------------------------------------------"

cd testsuite
./testing
cd ..
